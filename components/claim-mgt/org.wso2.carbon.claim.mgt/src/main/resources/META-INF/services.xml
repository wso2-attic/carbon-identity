<serviceGroup>
    <service name="ClaimManagementService" scope="transportsession">
        <transports>
            <transport>https</transport>
        </transports>
        <parameter name="ServiceClass" locked="false">
            org.wso2.carbon.claim.mgt.ClaimAdminService
        </parameter>
        <operation name="getClaimMappings">
            <parameter name="AuthorizationAction" locked="true">/permission/admin/manage/identity/claimmgt/view</parameter>
        </operation>
        <operation name="getClaimMappingByDialect">
            <parameter name="AuthorizationAction" locked="true">/permission/admin/manage/identity/claimmgt/view</parameter>
        </operation>
        <operation name="upateClaimMapping">
            <parameter name="AuthorizationAction" locked="true">/permission/admin/manage/identity/claimmgt/update</parameter>
        </operation>
        <operation name="addNewClaimMapping">
            <parameter name="AuthorizationAction" locked="true">/permission/admin/manage/identity/claimmgt/create</parameter>
        </operation>
        <operation name="removeClaimMapping">
            <parameter name="AuthorizationAction" locked="true">/permission/admin/manage/identity/claimmgt/delete</parameter>
        </operation>
        <operation name="addNewClaimDialect">
            <parameter name="AuthorizationAction" locked="true">/permission/admin/manage/identity/claimmgt/create</parameter>
        </operation>
        <operation name="removeClaimDialect">
            <parameter name="AuthorizationAction" locked="true">/permission/admin/manage/identity/claimmgt/delete</parameter>
        </operation>
        <parameter name="adminService" locked="true">true</parameter>
        <parameter name="hiddenService" locked="true">true</parameter>
        <parameter name="AuthorizationAction" locked="false">/permission/admin/manage/identity/claimmgt</parameter>
    </service>
</serviceGroup>
