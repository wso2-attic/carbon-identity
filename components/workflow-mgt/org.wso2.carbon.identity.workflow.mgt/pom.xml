<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>identity-workflow-mgt</artifactId>
        <groupId>org.wso2.carbon.identity</groupId>
        <version>4.5.4-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.wso2.carbon.identity.workflow.mgt</artifactId>
    <packaging>bundle</packaging>
    <name>WSO2 Carbon - Workflow Mgt</name>
    <url>http://wso2.org</url>

    <dependencies>
        <dependency>
            <groupId>commons-lang.wso2</groupId>
            <artifactId>commons-lang</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.ws.commons.axiom.wso2</groupId>
            <artifactId>axiom</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.utils</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.identity</groupId>
            <artifactId>org.wso2.carbon.identity.core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.identity</groupId>
            <artifactId>org.wso2.carbon.identity.base</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon.identity</groupId>
            <artifactId>org.wso2.carbon.identity.workflow.mgt.bps.stub</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-scr-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <Private-Package>
                            org.wso2.carbon.identity.workflow.mgt.internal,
                        </Private-Package>
                        <Import-Package>
                            javax.xml.xpath,
                            org.apache.axiom.om,
                            org.apache.axiom.om.xpath,
                            org.apache.axis2,
                            org.apache.axis2.addressing,
                            org.apache.axis2.client,
                            org.apache.axis2.context,
                            org.apache.axis2.description,
                            org.apache.axis2.transport.http,
                            org.apache.commons.lang,
                            org.apache.commons.logging,
                            org.apache.commons.collections,
                            org.jaxen,
                            org.osgi.framework,
                            org.osgi.service.component,
                            org.wso2.carbon.context,
                            org.wso2.carbon.identity.base,
                            org.wso2.carbon.identity.core.util,
                            org.wso2.carbon.user.core.service,
                            org.wso2.carbon.utils,
                            javax.activation;version="0.0.0",
                            org.apache.commons.io,
                            org.wso2.carbon.base,
                            org.wso2.carbon.bpel.stub.upload,
                            org.wso2.carbon.bpel.stub.upload.types,
                            org.wso2.carbon.humantask.stub.upload,
                            org.wso2.carbon.humantask.stub.upload.types,
                            org.wso2.carbon.user.api,
                            org.wso2.carbon.user.core.tenant,
                            org.wso2.carbon.user.core.util
                        </Import-Package>
                        <Export-Package>
                            !org.wso2.carbon.identity.workflow.mgt.internal,
                            org.wso2.carbon.identity.workflow.mgt.*
                        </Export-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>

