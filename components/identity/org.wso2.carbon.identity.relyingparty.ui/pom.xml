<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<parent>
		<groupId>org.wso2.carbon</groupId>
		<artifactId>identity</artifactId>
		<version>4.3.0-SNAPSHOT</version>
	<relativePath>../pom.xml</relativePath>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<groupId>org.wso2.carbon</groupId>
	<artifactId>org.wso2.carbon.identity.relyingparty.ui</artifactId>
	<packaging>bundle</packaging>
	<version>4.3.0-SNAPSHOT</version>
	<name>WSO2 Carbon - Relying Party UI</name>
	<description>Relying Party UI component for WSO2 Carbon</description>
	<url>http://www.wso2.com</url>


	<dependencies>
		<dependency>
			<groupId>org.wso2.carbon</groupId>
			<artifactId>org.wso2.carbon.ui</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.ws.security.wso2</groupId>
			<artifactId>wss4j</artifactId>
		</dependency>
		<dependency>
			<groupId>opensaml.wso2</groupId>
			<artifactId>opensaml2</artifactId>
		</dependency>
		<dependency>
			<groupId>org.openid4java.wso2</groupId>
			<artifactId>openid4java-nodeps</artifactId>
		</dependency>
		<dependency>
			<groupId>org.wso2.carbon</groupId>
			<artifactId>org.wso2.carbon.identity.base</artifactId>
            		<!--<version>4.3.0-SNAPSHOT</version>-->
		</dependency>
        <dependency>
            <groupId>com.google.step2.wso2</groupId>
            <artifactId>step2</artifactId>
            <!--<version>${google.step2.wso2.version}</version>-->
        </dependency>
        <dependency>
            <groupId>com.google.guice.wso2</groupId>
            <artifactId>guice</artifactId>
            <!--<version>${google.guice.wso2.version}</version>-->
        </dependency>
        <dependency>
            <groupId>org.apache.httpcomponents.wso2</groupId>
            <artifactId>httpclient</artifactId>
            <!--<version>${httpcomponents-httpclient.wso2.version.identity}</version>-->
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.logging</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.identity.relyingparty.stub</artifactId>
            <!--<version>4.3.0-SNAPSHOT</version>-->
        </dependency>    
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Name>${project.artifactId}</Bundle-Name>
						<Import-Package>
							org.apache.ws.security.*,
							com.google.step2.*,
							!javax.xml.namespace,
							org.apache.commons.logging.*; version="1.0.4",
							javax.xml.namespace; version=0.0.0,
							javax.servlet;version="${imp.pkg.version.javax.servlet}",
							javax.servlet.http;version="${imp.pkg.version.javax.servlet}",
							javax.xml.stream.*; version=1.0.1,
							*;resolution:=optional
                                                </Import-Package>
						<Export-Package>
						org.wso2.carbon.identity.relyingparty.ui.*;
						</Export-Package>
						<Carbon-Component>UIBundle</Carbon-Component>
                                                <Embed-Dependency>httpclient;scope=compile|runtime</Embed-Dependency>
						<DynamicImport-Package>*</DynamicImport-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
