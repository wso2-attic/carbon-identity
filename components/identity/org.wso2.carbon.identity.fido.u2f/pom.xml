<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>identity</artifactId>
        <groupId>org.wso2.carbon</groupId>
        <version>4.3.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>org.wso2.carbon.identity.fido.u2f</artifactId>
    <packaging>bundle</packaging>
    <name>WSO2 Carbon - FIDO BE Service</name>
    <dependencies>
        <dependency>
            <groupId>com.yubico</groupId>
            <artifactId>u2flib-server-core</artifactId>
            <version>0.13.0</version>
            <scope>provided</scope>
        </dependency>
        <!--<dependency>
            <groupId>org.bouncycastle.wso2</groupId>
            <artifactId>bcprov-jdk15on</artifactId>
            <version>1.49.0.wso2v2</version>
        </dependency>-->
        <!--<dependency>
            <groupId>org.bouncycastle</groupId>
            <artifactId>bcprov-jdk15on</artifactId>
            <version>1.51</version>
            <scope>provided</scope>
        </dependency>-->
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.identity.application.authentication.framework</artifactId>
            <version>4.2.3</version>
        </dependency>
        <!--<dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.user.mgt</artifactId>
        </dependency>-->
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.logging</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.core.services</artifactId>
        </dependency>
    </dependencies>

    <properties>
        <!--<org.osgi.framework.system.packages.extra>sun.misc.*,org.bouncycastle.jce.provider,org.bouncycastle.jce.spec</org.osgi.framework.system.packages.extra>-->
        <org.osgi.framework.system.packages.extra>sun.misc.*,</org.osgi.framework.system.packages.extra>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <Private-Package>
                            org.wso2.carbon.identity.fido.internal,
                            org.wso2.carbon.identity.fido.dao,
                            org.wso2.carbon.identity.fido.service
                        </Private-Package>
                        <Import-Package>
                            org.wso2.carbon.identity.application.authentication.framework.exception; version="4.2.3",
                            com.yubico.u2f.exceptions; version="1.0.0",
                            com.yubico.u2f.data.messages; version="1.0.0",
                            com.yubico.u2f.data; version="1.0.0",
                            com.yubico.u2f; version="1.0.0",
                            com.google.common.collect; version="18.0.0",
                            org.apache.commons.logging.*,
                            org.osgi.framework,
                            org.osgi.service.component,
                            org.wso2.carbon.identity.base,
                            org.wso2.carbon.user.core.service,
                            org.wso2.carbon.identity.core.util,

                        </Import-Package>
                        <Export-Package>
                            !org.wso2.carbon.identity.fido.internal,
                            org.wso2.carbon.identity.fido.u2f,
                        </Export-Package>

                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>