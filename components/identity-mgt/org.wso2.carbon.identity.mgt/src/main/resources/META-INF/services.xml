        </operation>
        <parameter name="AuthorizationAction" locked="false">/permission/admin/manage/identity/identitymgt</parameter>
	</service>

    <service name="UserIdentityManagementAdminService" scope="transportsession">
        <transports>
            <transport>https</transport>
        </transports>
        <parameter name="ServiceClass" locked="false">
            org.wso2.carbon.identity.mgt.services.UserIdentityManagementAdminService
        </parameter>
		<operation name="getChallengeQuestionsOfUser">
			<parameter name="AuthorizationAction" locked="true">/permission/admin/manage/identity/identitymgt/view</parameter>
		</operation>
        <operation name="getAllChallengeQuestions">
