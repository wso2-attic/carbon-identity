        </operation>
        <operation name="lockUserAccount">
            <parameter name="AuthorizationAction" locked="true">/permission/admin/configure/security/usermgt/users</parameter>
        </operation>
        <operation name="unlockUserAccount">
            <parameter name="AuthorizationAction" locked="true">/permission/admin/configure/security/usermgt/users</parameter>
        </operation>
        <operation name="resetUserPassword">
            <parameter name="AuthorizationAction" locked="true">/permission/admin/manage/identity/identitymgt
                /update</parameter>
        </operation>
        <operation name="setChallengeQuestions">
            <parameter name="AuthorizationAction" locked="true">/permission/admin/manage/identity/identitymgt/view</parameter>
        </operation>
        <operation name="getAllPromotedUserChallenge">
            <parameter name="AuthorizationAction" locked="true">/permission/admin/manage/identity/identitymgt/view</parameter>
        </operation>
        <parameter name="AuthorizationAction" locked="false">/permission/admin/manage/identity/identitymgt</parameter>
